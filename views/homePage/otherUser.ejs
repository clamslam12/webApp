<div id="content" class="col-sm-8 col-md-6 col-lg-6">
  <% if(otherUser) { %>
    <div class="box">
      <div class="otherUser header-font">
        <img src="../images/self.png" class="big-symbol" />
        <%= otherUser.userName %>
          <div class="col-sm-2">
            <% if(following) { %>
              <form method="POST" action="<%= `/home/${otherUser.email}?_method=PUT` %>">
                <button type="submit" class="btn button btnLogin unfollow">Unfollow</button>
              </form>
              <% } else { %>
                <form method="POST" action="<%= `/home/${otherUser.email}?_method=PUT` %>">
                  <button type="submit" class="btn button btnLogin following">Follow</button>
                </form>
                <% } %>
              </div>
        </div>
        <div class="centerText">
        <p>Total Posts: <%= otherUser.numberOfPosts %></p>
        <p>Following: <%= otherUser.following.length %></p>
        <p>Bio: <%=otherUser.bio %></p>
        </div>
    </div>
    <%}%>
      <div class="margin-bottom"></div>

      <% posts.forEach(post=> { %>
        <div class="box">
          <div class="form-group row">
            <div class="col-sm-2 col-md-2">
              <img src="../images/self.png" class="big-symbol" />
            </div>
            <div class="col-sm-10 col-md-10">
              <p class="header-font">
                <% if(post.userEmail !=user.email) { %>
                  <a href="<%= `/home/${post.userEmail}` %>">
                    <%= post.userName %>
                  </a>
                  <% } else { %>
                    <%= post.userName %>
                      <%}%>
              </p>
              <p class="fullName text-secondary">
                @<%= post.fullName %>
              </p>
